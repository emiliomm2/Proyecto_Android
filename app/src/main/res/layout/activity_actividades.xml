<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActividadesActivity"
    android:background="@drawable/light">

    <Button
        android:id="@+id/btnActividad1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Actividad 1" />

    <Button
        android:id="@+id/btnActividad2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnActividad1"
        android:text="Actividad 2" />

    <Button
        android:id="@+id/btnSubirActividad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnActividad2"
        android:text="Subir Actividad" />

</RelativeLayout>

